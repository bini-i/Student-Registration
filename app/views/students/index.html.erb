<%= render layout: "students_layout" do %>
  <div class="w-full">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    <div class="flex justify-between items-center mr-5 pr-4">
      <h1 class="font-bold text-4xl">Students</h1>
      <%= link_to "Add Students", new_department_student_url, class: "rounded-lg py-1 px-4 bg-green-300 inline-block font-medium mt-5" %>
    </div>
    <div id="students" class="min-w-full">
      <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
          <tr>
            <th scope="col" class="py-3 px-6">
              First Name
            </th>
            <th scope="col" class="py-3 px-6">
              Father Name
            </th>
            <th scope="col" class="py-3 px-6">
              Last Name
            </th>
            <th scope="col" class="py-3 px-6">
              Department
            </th>
            <th scope="col" class="py-3 px-6">
            </th>
          </tr>
        </thead>
        <%= render @students %>
      </table>
    </div>
  </div>
<% end %>
